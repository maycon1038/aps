<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="@drawable/fundotexto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp">

            <ImageView
                android:id="@+id/btn2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/circle"
                android:layout_toEndOf="@+id/btn1" />

            <ImageView
                android:id="@+id/btn3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/circle"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/btn2" />

            <ImageView
                android:id="@+id/btn4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/circle"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/btn3" />

            <ImageView
                android:id="@+id/btn5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/circle"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/btn4" />

            <ImageView
                android:id="@+id/btn1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/circle"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>


        </RelativeLayout>






    <FrameLayout
        android:layout_width="match_parent"
        android:background="@drawable/button_disabled"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btnmover">

    </FrameLayout>
    <ImageView
        android:id="@+id/btnmover"
        android:layout_width="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circulo"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"/>

  <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

       <ImageButton
         android:layout_width="80dp"
         android:layout_height="80dp"
           app:srcCompat="@android:drawable/ic_media_rew"
         android:background="@drawable/botao"
         android:layout_gravity="left|bottom"
         android:id="@+id/imageButtonleft" />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@android:drawable/ic_media_ff"
            android:background="@drawable/botao"
            android:layout_gravity="right|bottom"
            android:id="@+id/imageButtonright" />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@android:drawable/ic_media_pause"
            android:layout_gravity="center|bottom"
            android:background="@drawable/botao"
            android:id="@+id/imageButtonpause" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@drawable/fundotexto2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@android:drawable/btn_star_big_on"
            android:id="@+id/btn_star1" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:drawable/btn_star_big_on"
            android:id="@+id/btn_star2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@android:drawable/btn_star_big_on"
            android:id="@+id/btn_star3" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:background="@drawable/fundotexto2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="5dp"
            android:text="Pontos: "
            android:id="@+id/textlayout"/>


        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|right"
            android:padding="5dp"
            android:gravity="center"
            android:id="@+id/txtTextoPontos"/>
    </FrameLayout>


</RelativeLayout>
