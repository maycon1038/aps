   <FrameLayout
       android:layout_width="300dp"
       android:layout_height="200dp"
       android:visibility="gone"
       android:id="@+id/framelayoutpop"
       android:layout_centerInParent="true">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="@color/colorPrimaryDark"
           android:textSize="30dp"
           android:gravity="center"
           android:id="@+id/txttitulo"
           android:textStyle="bold"
           android:text=""
           android:layout_gravity="top"/>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textColor="@color/colorPrimaryDark"
           android:textSize="30dp"
           android:gravity="center"
           android:textStyle="bold"
           android:layout_marginTop="40dp"
           android:id="@+id/txtpontos"
           android:text=""
           android:layout_gravity="top"/>


       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_gravity="center"
           android:layout_height="wrap_content">

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@android:drawable/star_big_off"
               android:id="@+id/star1"
               android:layout_weight="1" />
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@android:drawable/star_big_off"
               android:id="@+id/star2"
               android:layout_weight="1" />
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@android:drawable/star_big_off"
               android:id="@+id/star3"
               android:layout_weight="1" />
       </LinearLayout>




       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_gravity="bottom"
           android:layout_height="wrap_content">

           <Button
               android:text="Continuar"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/botao"
               android:id="@+id/btnproximafase"
               android:onClick="Restart_Start_Fase"
               android:layout_weight="0.47" />

           <Button
               android:text="Sair"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/botao"
               android:id="@+id/btnsair"
               android:onClick="SAIR"
               android:layout_weight="0.47" />
       </LinearLayout>
   </FrameLayout>

    <TextView
        android:layout_width="100dp"
        android:layout_height="246dp"
          android:layout_gravity="right|bottom"
        android:id="@+id/imageButtonright"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/frameLayout3"
        android:layout_below="@+id/frameLayout" />
    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/frameLayout">
    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/botao"
        android:text="PAUSE"
        android:padding="5dp"
        android:gravity="center"
        android:id="@+id/btnpause"
        android:textSize="12dp"
        android:layout_gravity="left"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:onClick="PAUSE"/>


    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="SAIR"
        android:padding="5dp"
        android:gravity="center"
        android:textSize="12dp"
        android:background="@drawable/botao"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:onClick="SAIRDOJOGO"
        android:layout_gravity="right"
        android:id="@+id/textView" />

    </FrameLayout>

