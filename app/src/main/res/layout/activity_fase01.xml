            android:textStyle="bold"
            android:textSize="15dp"
            android:padding="5dp"
            android:gravity="center"
            android:id="@+id/txtTextoPontos"/>
    </FrameLayout>

    <TextView
        android:layout_width="100dp"
        android:layout_height="321dp"
        android:layout_gravity="left|bottom"
         android:id="@+id/imageButtonleft"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/frameLayout3" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/RelativeLayoutid"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/btnbf2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/vidrofundo"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btnb1" />

        <ImageView
            android:id="@+id/btnbf1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/organicofundo"
            android:layout_alignParentBottom="true" />
        <ImageView
            android:id="@+id/btnbf3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/papelfundo"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btnb2" />

        <ImageView
            android:id="@+id/btnbf5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/metaisfundo"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btnb4" />

        <ImageView
            android:id="@+id/btnbf"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/plasticofundo"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btnb3" />

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/papel"
            android:id="@+id/btnmover_lixo"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true">

        </FrameLayout>



        <ImageView
            android:id="@+id/btnb1"
            android:layout_width="80dp"
            android:onClick="lixeiraOrganica"
            android:layout_height="80dp"
            android:background="@drawable/organicofrente"
            android:layout_alignParentBottom="true" />





        <ImageView
            android:id="@+id/btnb2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="lixeiraVidro"
            android:background="@drawable/vidrofrente"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btnb1" />



        <ImageView
            android:id="@+id/btnb3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="lixeiraPapel"
            android:background="@drawable/papelfrente"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btnb2" />




        <ImageView
            android:id="@+id/btnb4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:onClick="lixeiraPlastico"
