            android:padding="2dp"
            android:layout_gravity="center|center"
            android:background="@drawable/coracao_on"
            android:id="@+id/btn_vida2" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="2dp"
            android:layout_gravity="right|center"
